<h1 class="center-align">Productos en Tiempo Real</h1>
<div class="row">
  <ul id="lista-productos" class="collection">
    {{#each products}}
      <li class="collection-item col s12 m6">
        <p><span
            class="yellow accent-2"
            style="border-radius: 10%; padding: 10px 15px; margin-right: 10px; font-weight: bold;"
          >{{this.title}}</span>
          Precio: ${{this.price}}
          | Stock:
          {{this.stock}}</p>
      </li>
    {{/each}}
  </ul>
</div>

<h2 class="section-title center-align">Agregar Producto</h2>

<form id="form-agregar" class="col s12">
  <div class="input-field">
    <input type="text" id="title" placeholder="Nombre" required />
    <label for="title">Nombre</label>
  </div>
  <div class="input-field">
    <input type="text" id="description" placeholder="Descripcion" required />
    <label for="description">Descripcion</label>
  </div>
   <div class="input-field">
    <input type="text" id="code" placeholder="Código" required />
    <label for="code">Código</label>
  </div>
  <div class="input-field">
    <input type="number" id="price" placeholder="Precio" min="0" required />
    <label for="precio">Precio</label>
  </div>
  <div class="input-field">
    <input type="number" id="stock" placeholder="Stock" min="1" required />
    <label for="stock">Stock</label>
  </div>
   <div class="input-field">
    <input type="text" id="category" placeholder="Categoría" required />
    <label for="category">Categoría</label>
  </div>
   <div class="input-field">
    <input type="text" id="thumbnails" placeholder="Thumbnails" required />
    <label for="thumbnails">Thumbnails</label>
  </div>
  <button type="submit" class="btn waves-effect waves-light">Agregar</button>
</form>

<h2 class="section-title center-align">Eliminar Producto</h2>

<form id="form-eliminar" class="col s12">
  <div class="input-field">
    <input
      type="text"
      id="title-eliminar"
      placeholder="Nombre del Producto a eliminar"
      required
    />
    <label for="title-eliminar">Nombre del Producto</label>
  </div>
  <button
    type="submit"
    class="btn waves-effect waves-light red"
  >Eliminar</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/main.js"></script>